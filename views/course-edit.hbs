<div class="row">
    <div class="col s12"><h2>Edit {{course.title}}</h2></div>
    <div class="col s12">
        <form action="/courses/edit" method="POST" class="course-form" novalidate>
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="id" value="{{course.id}}">
            <div class="input-field">
                <input id="title" type="text" name="title" class="validate" value="{{course.title}}" required>
                <label for="title">Course name</label>
                <span class="helper-text" data-error="Enter course name"></span>
            </div>

            <div class="input-field">
                <input id="price" type="number" name="price" class="validate" required min="1" value="{{course.price}}">
                <label for="price">Price</label>
                <span class="helper-text" data-error="Enter price"></span>
            </div>

            <div class="input-field">
                <input id="img" type="text" name="img" class="validate" value="{{course.img}}" required>
                <label for="img">Image URL</label>
                <span class="helper-text" data-error="Enter image url"></span>
            </div>

            <button class="btn btn-primary" type="submit">Edit course</button>
        </form>
    </div>
    <div class="col s12">
        <form action="/courses/remove" method="POST">
            <input type="hidden" name="_csrf" value="{{csrf}}">
            <input type="hidden" name="id" value="{{course.id}}">
            <button class="btn red"> Delete Course </button>
        </form>
    </div>
</div>

