<div class="auth">
    <div class="row">
        <div class="col s12">
            <ul class="tabs">
                <li class="tab col s6"><a class="active" href="#login">Login</a></li>
                <li class="tab col s6"><a href="#register">Register</a></li>
            </ul>
        </div>
        <div id="login" class="col s6">
            {{#if loginError}}
                <p class="alert">{{loginError}}</p>
            {{/if}}
            <h5 class="text-center">Enter the store</h5>
            <form action="/auth/login" method="POST" class="col s12">
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <div class="input-field">
                    <input id="email" type="email" name="email" class="validate" required>
                    <label for="email">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="password" type="password" name="password" class="validate" autocomplete required>
                    <label for="password">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <p><a href="/auth/reset">Forgot password?</a></p>
                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
        <div id="register" class="col s6 offset-s6">
            {{#if registerError}}
                <p class="alert">{{registerError}}</p>
            {{/if}}
            <h5 class="text-center">Create account</h5>
            <form action="/auth/register" method="POST" class="col s12" novalidate>
                <input type="hidden" name="_csrf" value="{{csrf}}">
                <div class="input-field">
                    <input id="name" type="text" name="name" class="validate" autocomplete required value="User name">
                    <label for="name">Name</label>
                    <span class="helper-text" data-error="Enter name"></span>
                </div>

                <div class="input-field">
                    <input id="remail" type="email" name="email" class="validate" required value="newtestesterox@gmail.com">
                    <label for="remail">Email</label>
                    <span class="helper-text" data-error="Enter email"></span>
                </div>

                <div class="input-field">
                    <input id="rpassword" type="password" name="password" class="validate" autocomplete required value="qazwsx">
                    <label for="rpassword">Password</label>
                    <span class="helper-text" data-error="Enter password"></span>
                </div>

                <div class="input-field">
                    <input id="confirm" type="password" name="confirm" class="validate" autocomplete required value="qazwsx">
                    <label for="confirm">Confirm password</label>
                    <span class="helper-text" data-error="confirm password"></span>
                </div>

                <button class="btn btn-primary" type="submit">Login</button>
            </form>
        </div>
    </div>
</div>
